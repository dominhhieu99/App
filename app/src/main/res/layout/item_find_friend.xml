<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
                android:padding="1dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgBackgroundFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/mau" />

    <TextView
        android:id="@+id/txtNameFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_above="@id/txtKmFF"
        android:layout_toRightOf="@id/imgOnOffFF"
        android:text="dung"
        android:textColor="@color/colorTextError"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imgLikeFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_un_like" />


    <ImageView
        android:id="@+id/imgOnOffFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtKmFF"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_offline" />

    <TextView
        android:id="@+id/txtKmFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:text="2Km"
        android:textColor="@color/colorTextDark"
        android:textSize="16sp" />


</RelativeLayout>