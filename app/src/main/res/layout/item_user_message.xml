<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatarUserM"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/background1"
        app:layout_goneMarginStart="16dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNameU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="dung12344"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/imgAvatarUserM"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtMessageUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dung fun"
            app:layout_constraintLeft_toRightOf="@id/imgAvatarUserM"
            app:layout_constraintTop_toBottomOf="@id/txtNameU" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtTimeListMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:text="111" />


</LinearLayout>

